<resources>

    <!--app Theme Start-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/my_primary</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>

        <!--   theme UI controls like checkboxes and text fields e.g. FloatActionButton -->
        <item name="colorAccent">@color/my_accent</item>

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/my_primary_text</item>

        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/my_secondary_text</item>


        <item name="android:windowBackground">@color/window_background</item>
    </style>


    <!--app Theme End-->

    <!---->
    <style name="gbg_button_style">

        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>

        <item name="android:background">@drawable/button_background_primary</item>
        <item name="android:shadowColor">@color/btn_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">@color/btn_white</item>
        <item name="android:textSize">15dp</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="gbg_button_style_second">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/button_background_secondary</item>
        <item name="android:shadowColor">@color/btn_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">@color/my_primary</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="fragement_normal_text">
        <item name="android:textColor">@color/fragement_text_color</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="fragement_heading_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/textview_heading_text_background</item>
        <item name="android:shadowColor">@color/btn_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">@color/btn_white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
