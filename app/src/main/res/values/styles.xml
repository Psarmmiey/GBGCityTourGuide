<resources>

    <!--app Theme Start-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/my_primary</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>

        <!--   theme UI controls like checkboxes and text fields e.g. FloatActionButton -->
        <item name="colorAccent">@color/my_accent</item>

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/my_primary_text</item>

        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/my_secondary_text</item>


        <item name="android:windowBackground">@color/window_background</item>
    </style>
    <!--app Theme End-->

    <!-- Main Button-->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">15dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:topRightRadius">10dp</item>
    </style>

    <!---->
    <style name="gbg_button_style">

        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">0dp</item>

        <item name="android:background">@drawable/button_background_primary</item>
        <item name="android:shadowColor">@color/btn_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textColor">@color/btn_white</item>
        <item name="android:textSize">12dp</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="gbg_button_style_second">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/button_background_secondary</item>
        <item name="android:shadowColor">@color/btn_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">@color/my_primary</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="fragement_normal_text">
        <item name="android:textColor">@color/fragement_text_color</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="fragement_heading_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/textview_heading_text_background</item>
        <item name="android:shadowColor">@color/btn_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">@color/btn_white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TabStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="OverviewTextStyle">
        <item name="android:typeface">sans</item>
        <item name="android:shadowColor">@color/btn_shadow</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    <style name="infocenter_nordstan_text">
        <item name="android:textColor">@color/my_infocenter</item>
        <item name="android:text">@string/headingtext_infocenter_nordstan</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="infocenter_heading_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/textview_background_second_style</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="taxi_sub_heading_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30dp</item>

        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="infocenter_kungsport_text">
        <item name="android:textColor">@color/my_infocenter</item>
        <item name="android:text">@string/headingtext_infocenter_kungsports</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="gbg_button_style_solid">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/button_background_solid</item>
        <item name="android:shadowColor">@color/btn_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--Background colour-->
        <item name="android:background">@color/toolbar_background</item>
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/toolbar_textColour</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/toolbar_accentColour</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/white</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/black</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/blue</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
