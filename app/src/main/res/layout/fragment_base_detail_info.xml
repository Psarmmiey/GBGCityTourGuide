<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false"
    android:background="#eceff1">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceff1"
    android:gravity="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_place_black_18dp"
            android:paddingLeft="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:text="Address"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="normal"
                android:typeface="sans"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtStadMuseumTraveladdress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kunsgatan 1,41742 Göteborg."
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#757575"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_mail_outline_black_18dp"
            android:paddingLeft="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:text="Email"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="normal"
                android:typeface="sans"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtStadMuseumConatct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="info@cloudcentrik.net"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#757575"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_phone_black_18dp"
            android:paddingLeft="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:text="Phone"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="normal"
                android:typeface="sans"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtStadMuseumPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="info@cloudcentrik.net"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#757575"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_access_time_black_18dp"
            android:paddingLeft="20dp"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:text="Opening Hours"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="normal"
                android:typeface="sans"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtStadMuseumOpeningHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12:00-18:00"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#757575"
                 />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_euro_symbol_black_18dp"
            android:paddingLeft="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:text="Ticket Price"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="normal"
                android:typeface="sans"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtStadMuseumTicketPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="120 SEK"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#757575"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_directions_bus_black_18dp"
            android:paddingLeft="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:text="Travle Information"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="normal"
                android:typeface="sans"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtStadMuseumTravelInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take Tram 7 from Brunnsparken to Frölunda torg and get down to stop positivegatan"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#757575"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
</ScrollView>