<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="16dp"
    android:gravity="top"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/my_primary"
        android:minHeight="?attr/actionBarSize"></android.support.v7.widget.Toolbar>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        android:fillViewport="false"
        android:background="#eceff1">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_margin="0dp"
            android:gravity="top"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:elevation="4sp"
                android:layout_marginTop="5dp"
                >
                <Button
                    android:id="@+id/btn_pub_dubliner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="The Dubliner"
                    android:textSize="20dp"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="1dp"
                    android:elevation="4sp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_restaurant_menu_white_12dp"
                    android:drawableRight="@drawable/ic_chevron_right_white_18dp"
                    android:textColor="@color/white"
                    android:background="@color/button_colour_teal"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:elevation="4sp"
                android:layout_marginTop="5dp"
                >
                <Button
                    android:id="@+id/btn_pub_Johnscott"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="John Scott's"
                    android:textSize="20dp"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="1dp"
                    android:elevation="4sp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_restaurant_menu_white_12dp"
                    android:drawableRight="@drawable/ic_chevron_right_white_18dp"
                    android:textColor="@color/white"
                    android:background="@color/button_colour_pink"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:elevation="4sp"
                android:layout_marginTop="5dp"
                >

                <Button
                    android:id="@+id/btn_pub_Bishopsarm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="The Bishop's Arm"
                    android:textSize="20dp"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="1dp"
                    android:elevation="4sp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_restaurant_menu_white_12dp"
                    android:drawableRight="@drawable/ic_chevron_right_white_18dp"
                    android:textColor="@color/white"
                    android:background="@color/button_colour_blue"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>