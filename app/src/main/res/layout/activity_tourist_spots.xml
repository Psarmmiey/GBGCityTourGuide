<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    tools:context=".MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/my_primary"
        android:minHeight="?attr/actionBarSize"></android.support.v7.widget.Toolbar>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_historical_place"
            style="@style/gbg_button_style_solid"
            android:drawableTop="@drawable/ic_tourist_spots"
            android:text="Historical Places"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_garden"
            style="@style/gbg_button_style_solid"
            android:drawableTop="@drawable/ic_tourist_spots"
            android:text="Garden"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_museum"
            style="@style/gbg_button_style_solid"
            android:drawableTop="@drawable/ic_tourist_spots"
            android:text="Museum"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_island"
            style="@style/gbg_button_style_solid"
            android:drawableTop="@drawable/ic_tourist_spots"
            android:text="Islands"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_lake"
            style="@style/gbg_button_style_solid"
            android:drawableTop="@drawable/ic_tourist_spots"
            android:text="Lakes"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/btn_park"
            style="@style/gbg_button_style_solid"
            android:drawableTop="@drawable/ic_tourist_spots"
            android:text="Park"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    </ScrollView>
</RelativeLayout>