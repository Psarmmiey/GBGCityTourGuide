<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="16dp"
    android:gravity="top"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/my_primary"
        android:minHeight="?attr/actionBarSize"></android.support.v7.widget.Toolbar>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        android:fillViewport="false"
        android:background="#eceff1">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_margin="0dp"
            android:gravity="top"
            >

            <!-- 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:elevation="4sp"
                android:layout_marginTop="5dp"
                >
                <Button
                    android:id="@+id/btn_youth_hostel_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="Slottsskogens Youth Hostel"
                    android:textSize="20dp"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="1dp"
                    android:elevation="4sp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_hotel_white_12dp"
                    android:drawableRight="@drawable/ic_chevron_right_white_18dp"
                    android:textColor="@color/white"
                    android:background="@color/button_colour_teal"/>


            </LinearLayout>

            <!-- 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:elevation="4sp"
                android:layout_marginTop="5dp"
                >
                <Button
                    android:id="@+id/btn_backpackers_goteborg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="Backpackers Göteborg"
                    android:textSize="20dp"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="1dp"
                    android:elevation="4sp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_hotel_white_12dp"
                    android:drawableRight="@drawable/ic_chevron_right_white_18dp"
                    android:textColor="@color/white"
                    android:background="@color/button_colour_pink"/>


            </LinearLayout>

            <!-- 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:elevation="4sp"
                android:layout_marginTop="5dp"
                >
                <Button
                    android:id="@+id/btn_stf_vandrarhem_stigbergsliden"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="STF Vandrarhem Stigbergsliden"
                    android:textSize="20dp"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="1dp"
                    android:elevation="4sp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_hotel_white_12dp"
                    android:drawableRight="@drawable/ic_chevron_right_white_18dp"
                    android:textColor="@color/white"
                    android:background="@color/button_colour_blue"/>


            </LinearLayout>

            <!-- 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:elevation="4sp"
                android:layout_marginTop="5dp"
                >
                <Button
                    android:id="@+id/btn_linneplatsens_hotel_and_hostel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="Linnéplatsens Hotel &amp; Hostel"
                    android:textSize="20dp"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="1dp"
                    android:elevation="4sp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_hotel_white_12dp"
                    android:drawableRight="@drawable/ic_chevron_right_white_18dp"
                    android:textColor="@color/white"
                    android:background="@color/button_colour_green"/>


            </LinearLayout>

            <!-- 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:elevation="4sp"
                android:layout_marginTop="5dp"
                >
                <Button
                    android:id="@+id/btn_kvibergs_hostel_and_cabins"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="Kvibergs Hostel and Cabins"
                    android:textSize="20dp"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="1dp"
                    android:elevation="4sp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_hotel_white_12dp"
                    android:drawableRight="@drawable/ic_chevron_right_white_18dp"
                    android:textColor="@color/white"
                    android:background="@color/button_colour_orange"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
